<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wqyap762.rprqs.CustomerMainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Order Food"
            android:id="@+id/orderFoodButton"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Manage Order"
            android:id="@+id/manageOrderCustomerButton"
            android:layout_row="2"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Track Waiting Time"
            android:id="@+id/trackWaitingTimeCustomerButton"
            android:layout_row="4"
            android:layout_column="0" />
    </GridLayout>
</RelativeLayout>
