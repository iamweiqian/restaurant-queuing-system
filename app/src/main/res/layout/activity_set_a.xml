<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wqyap762.rprqs.SetAActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout10"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/setAOrderButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set A"
            android:id="@+id/setA"
            android:layout_row="1"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="20px"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Curry Chicken Rice"
            android:id="@+id/setA1View"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ice Lemon Tea"
            android:id="@+id/setA2View"
            android:layout_row="4"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Basic Price"
            android:id="@+id/basicPrice"
            android:layout_row="6"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RM 6.00"
            android:id="@+id/textView35"
            android:layout_row="6"
            android:layout_column="1" />

        <EditText
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/setAQuantityText"
            android:layout_row="8"
            android:layout_column="0"
            android:hint="Quantity"
            android:layout_columnSpan="2" />

        <Space
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total"
            android:id="@+id/totalPrice"
            android:layout_row="10"
            android:layout_column="0" />

        <Space
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6"
            android:id="@+id/totalPriceText"
            android:layout_row="10"
            android:layout_column="1" />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/gridLayout10"
        android:src="#fffff8da" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:id="@+id/setAOrderButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
