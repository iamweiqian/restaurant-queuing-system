<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wqyap762.rprqs.BeveragesOrderActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <GridLayout
        android:id="@+id/gridLayout7"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/iceCoffeeButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Ice Coffee" />

        <Button
            android:id="@+id/iceLemonTeaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Ice Lemon Tea" />

        <Button
            android:id="@+id/iceMiloButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Ice Milo" />

        <Button
            android:id="@+id/mangoJellyButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Mango Jelly" />

    </GridLayout>
</RelativeLayout>
