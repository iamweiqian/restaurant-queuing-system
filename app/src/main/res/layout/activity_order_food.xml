<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wqyap762.rprqs.OrderFoodActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/setOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Set Lunch / Set Dinner" />

        <Button
            android:id="@+id/riceOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Rice" />

        <Button
            android:id="@+id/noodlesOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Noodles" />

        <Button
            android:id="@+id/beveragesOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Beverages" />

        <Button
            android:id="@+id/fruitJuiceOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Fruit Juice" />

        <Button
            android:id="@+id/dessertsOrderButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Desserts" />
    </GridLayout>

</RelativeLayout>