<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wqyap762.rprqs.RiceOrderActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <GridLayout
        android:id="@+id/gridLayout5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/blackPepperChickenRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Black Pepper Chicken Rice" />

        <Button
            android:id="@+id/gingerOnionSlicedFishRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Ginger Onion Sliced Fish Rice" />

        <Button
            android:id="@+id/porkRibsKingRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Pork Ribs King Rice" />

        <Button
            android:id="@+id/sambalSquidRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Sambal Squid Rice" />

        <Button
            android:id="@+id/sweetSourPorkRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Sweet and Sour Pork Rice" />

        <Button
            android:id="@+id/specialSauceDicedChickenRiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Special Sauce Diced Chicken Rice" />
    </GridLayout>
</RelativeLayout>
