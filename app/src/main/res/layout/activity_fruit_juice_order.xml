<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FruitJuiceOrderActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <GridLayout
        android:id="@+id/gridLayout9"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/applebittergourdJuiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Apple Bittergourd Juice" />

        <Button
            android:id="@+id/appleCarrotJuiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Apple Carrot Juice" />

        <Button
            android:id="@+id/greenAppleCeleryJuiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Green Apple Celery Juice" />

        <Button
            android:id="@+id/guavaSourPlumJuice"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Guava and Sour Plum Juice" />

        <Button
            android:id="@+id/watermelonOrangeJuiceButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Watermelon Orange Juice" />

    </GridLayout>
</RelativeLayout>
